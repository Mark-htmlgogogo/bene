    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "bashdb",
            "request": "launch",
            "name": "Bash-Debug (hardcoded script name)",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/bin/data2net.sh",
            "args": ["${workspaceFolder}/example/iris.vd",
                "${workspaceFolder}/example/iris.idt",
                "1",
                "${workspaceFolder}/example/resdir"]
        },

        {
            "type": "bashdb",
            "request": "launch",
            "name": "run.sh",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/example/run.sh",
            "args": ["iris","0"]
        },

        /* configurations for debugging get_local_scores.c */
        /* ../bin/get_local_scores iris.vd iris.idt 1 resdir/res -l ../bin/logreg256x2000.bin -s iris.sel  */
        {
            "name": "get_local_scores -s (3)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/get_local_scores",
            "args": ["${workspaceFolder}/example/iris.vd","${workspaceFolder}/example/iris.idt","1", "${workspaceFolder}/example/resdir/res", "-l", "${workspaceFolder}/bin/logreg256x2000.bin", "-s", "${workspaceFolder}/example/iris.sel"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },


        /* configurations for debugging split_local_scores.c */
        /* ../bin/split_local_scores 3 resdir */
         {
            "name": "split_local_scores(3)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/split_local_scores",
            "args": ["3","${workspaceFolder}/example/resdir"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
         },


        /* configurations for debugging reverse_local_scores.c, split_local_scores.c & get_best_parents.c*/
        {
            "name": "reverse_local_scores(3)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/reverse_local_scores",
            "args": ["3","${workspaceFolder}/example/resdir"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
                
            ]
        },

        {
            "name": "greedy(5)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/greedySearch/greedy",
            "args": ["5", "${workspaceFolder}/example/resdir/"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },

    ]
}